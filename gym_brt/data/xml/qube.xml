<?xml version="1.0" encoding="utf-8"?>
<mujoco model="qube">
    <compiler angle="radian" coordinate="local" inertiafromgeom="true" meshdir="../meshes/"/>
    <option gravity="0 0 -9.81" integrator="RK4" timestep="0.02"/>

    <asset>
        <include file="shared_assets.xml"/>
        <texture builtin="flat" name="texbody" height="512" width="512" rgb1="0 0 0" type="2d"/>
        <texture builtin="flat" name="texfloor" height="512" width="512" rgb1="1 1 1" type="2d"/>
        <texture builtin="flat" name="texred" height="512" width="512" rgb1="0.698 0.1333 0.1333" type="2d"/>
        <texture builtin="flat" name="texsilver" height="512" width="512" rgb1="0.7529 0.7529 0.7529" type="2d"/>
		<material name="bodyMat" shininess="0.1" specular="0.75" texture="texbody"/>
        <material name="floorMat" shininess="0.3" specular="0.75" texture="texfloor"/>
        <material name="redMat" shininess="0.9" specular="1.0" texture="texred"/>
        <material name="silverMat" shininess="0.3" specular="0.75" texture="texsilver"/>
    </asset>

    <default>
        <motor ctrlrange="-1 1"/>
	</default>

    <worldbody>
        <light diffuse=".8 .8 .8" dir="0 0 -2" directional="false" pos="2 -5 15" specular="0.9 0.9 0.9" castshadow="true"/>

        <camera pos="-5 -5 15" name="view" euler="-30 0 -45"/>

        <geom conaffinity="0" contype="0" name="ground" pos="0 0 0" size="50 50 1" type="plane" material="floorMat"/>

        <body name="qube0:body" pos="0 0 0">
			<geom contype="0" mesh="qube0:base" name="qube0:base" type="mesh" material="bodyMat"/>

            <body name="motor" pos="2.005 -2.05 4.2">
				<joint axis="0 0 1" name="base_motor" range="-90 90" type="hinge" damping="0.000275"/>
                <geom contype="0" mesh="qube0:motor" name="qube0:motor" type="mesh" material="redMat"/>

                <body name="arm" pos="0 -1.0 0.8">
				    <geom mesh="qube0:arm" name="qube0:arm" type="mesh" material="silverMat" mass="0.1"/>

                    <body name="pole" pos="0 -2.6 0">
				        <joint axis="0 1 0" name="arm_pole" range="-90 90" type="hinge" damping="0.0000505"/>
				        <geom mesh="qube0:pole" name="qube0:pole" type="mesh" material="redMat" mass="0.04"/>
                    </body>
                </body>
			</body>
		</body>
    </worldbody>

    <actuator>
        <motor gear="225" joint="base_motor" name="motor_rotation"/>
    </actuator>
</mujoco>